<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> Esta conta não pode ser criada:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Usuário" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "E-mail" %><br>
    <%= f.text_area :email %>
  </div>
  <div class="field">
    <%= f.label "Senha" %><br>
    <%= f.text_area :email %>
  </div>
  <div class="field">
    <%= f.label "Confirmação da senha" %><br>
    <%= f.text_area :email %>
  </div>
  <div class="actions">
    <%= f.submit "Pronto" %>
  </div>
<% end %>
